
---
const torneos = [
  {
    nombre: "Torneo Apertura",
    categoria: "M√°xima",
    estado: "Activo",
    fechaInicio: "2025-05-01",
    fechaFin: "2025-06-30",
    descripcion: "Primera fase del campeonato parroquial.",
  },
  {
    nombre: "Copa Verano",
    categoria: "Primera",
    estado: "Activo",
    fechaInicio: "2025-07-01",
    fechaFin: "2025-08-15",
    descripcion: "Competencia entre los mejores equipos de la temporada.",
  },
  {
    nombre: "Liga Juvenil",
    categoria: "Femenino",
    estado: "Activo",
    fechaInicio: "2025-04-15",
    fechaFin: "2025-05-20",
    descripcion: "Torneo reservado para j√≥venes sub-18.",
  },
  {
    nombre: "Interbarrios 2025",
    categoria: "M√°xima",
    estado: "Activo",
    fechaInicio: "2025-05-10",
    fechaFin: "2025-06-25",
    descripcion: "Competencia entre barrios de la parroquia.",
  },
];

// Agrupar torneos por categor√≠a
const categorias = [...new Set(torneos.map(t => t.categoria))];
---

<section class="bg-gradient-to-b from-black via-gray-900 to-black py-10 min-h-screen">
    <div class="max-w-7xl mx-auto px-6">
      <h2 class="text-4xl font-bold text-white text-center mb-10">üèÜ Torneos por Categor√≠a</h2>
  
      {categorias.map(cat => (
        <div class="mb-12">
          <h3 class="text-2xl font-semibold text-teal-400 border-b border-teal-600 pb-2 mb-6">{cat}</h3>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {torneos.filter(t => t.categoria === cat).map(torneo => (
              <div class="bg-gray-800 border border-teal-500 p-6 rounded-xl shadow-xl hover:scale-105 transition-transform duration-300">
                <h4 class="text-xl font-semibold text-teal-300 mb-2">{torneo.nombre}</h4>
                <p class="text-gray-300 text-sm mb-3">{torneo.descripcion}</p>
                <p class="text-gray-400 text-sm">
                  <strong>Inicio:</strong> {torneo.fechaInicio}<br />
                  <strong>Fin:</strong> {torneo.fechaFin}
                </p>
                <span class="inline-block mt-3 bg-green-600 text-white text-xs px-3 py-1 rounded-full">
                  {torneo.estado}
                </span>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>
  